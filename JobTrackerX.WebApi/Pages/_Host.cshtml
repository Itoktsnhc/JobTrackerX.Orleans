@page "/"
@namespace JobTrackerX.WebApi.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using JobTrackerX.Entities

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Constants.BrandName</title>
    <base href="~/" />
    <link href="_content/Blazored.Toast/blazored-toast.min.css" rel="stylesheet" />
    <script type="text/javascript" src="~/js/jquery.min.js"></script>
    <script type="text/javascript" src="~/js/moment.min.js"></script>
    <script src="https://lib.baomitu.com/echarts/5.0.2/echarts.min.js"></script>
    <link rel="stylesheet" href="~/css/bootstrap/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/app.css" />
    <script src="https://cdn.jsdelivr.net/npm/mermaid/dist/mermaid.min.js"></script>
    <script>
        window.renderJobGraph = (input) => {
            var output = document.getElementById("output");
            mermaid.render('theGraph', input).then(({ svg, bindFunctions }) => {
                output.innerHTML = svg;
                bindFunctions?.(element);
            });
        }
    </script>
</head>
<body>
    <app>
        @(await Html.RenderComponentAsync<App>(RenderMode.Server))
    </app>
    <script src="_framework/blazor.server.js"></script>
</body>


</html>